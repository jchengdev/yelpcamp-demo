<% include ../partials/header %>


<div class="row">
    <h1 style="text-align: center;">Edit Campground</h1>
    
    <div style="width: 30%; margin: 25px auto; ">
        <form class="buggy-form" action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST"> <%/* METHOD SHOULD BE PUT, BUT NOT YET SUPPORTED BY HTML5 */%>
            <div class="form-group">
                <label for="campname">Name</label>
                <input class="form-control" type="text" name="campground[name]" id="campname" value="<%= campground.name %>" required></input>
            </div>
            <div class="form-group">
                <label for="campimage">Image Url</label>
                <input class="form-control" type="text" name="campground[image]" id="campimage" pattern="^https:\/\/images\.unsplash\.com\/.*" title="Only images from images.unsplash.com allowed. See link below for instructions." value="<%= campground.image %>" required>
                <small>Click <a href="https://youtu.be/Bn3weNRQRDE">here</a> for tutorial on how to copy unsplash urls.</small>
            </div>
            <div class="form-group">
                <label for="campdescription">Description</label>
                <input class="form-control" type="text" name="campground[description]" id="campdescription" value="<%= campground.description %>"></input>
            </div>
            <div class="form-group">
                <label for="campprice">Price</label>
                <input class="form-control" type="number" name="campground[price]" id="campprice" min="0" step="0.01" value="<%= campground.price %>"></input>
            </div>
            <div class="form-group">
                <label for="camplocation">Location</label>
                <input class="form-control" type="text" name="campground[location]" id="camplocation" value="<%= campground.location %>"></input>
            </div>
            <div class="form-group">
                <button class="btn btn-lg btn-primary btn-block">Submit!</button>
            </div>
        </form>
        
        <a class="buggy-link" href="/campgrounds">Go Back</a>
    </div>
</div>


<% include ../partials/footer %>