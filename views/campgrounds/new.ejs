<% include ../partials/header %>


<div class="row">
    <h1 style="text-align: center;">Create a New Campground</h1>
    
    <div style="width: 30%; margin: 25px auto; ">
        <form class="buggy-form" action="/campgrounds" method="POST">
            <div class="form-group">
                <label for="campname">Name</label>
                <input class="form-control" type="text" name="name" id="campname" placeholder="name" required></input>
            </div>
            <div class="form-group">
                <label for="campimage">Image Url</label>
                <input class="form-control" type="text" name="image" id="campimage" pattern="^https:\/\/images\.unsplash\.com\/.*" title="Only images from images.unsplash.com allowed. See link below for instructions." placeholder="https://images.unsplash.com/..." required>
                <small>Click <a href="https://youtu.be/Bn3weNRQRDE">here</a> for tutorial on how to copy unsplash urls.</small>
            </div>
            <div class="form-group">
                <label for="campdescription">Description</label>
                <input class="form-control" type="text" name="description" id="campdescription" placeholder="description of the camp"></input>
            </div>
            <div class="form-group">
                <label for="campprice">Price</label>
                <input class="form-control" type="number" name="price" id="campprice" min="0" step="0.01" placeholder="9.99"></input>
            </div>
            <div class="form-group">
                <label for="camplocation">Location</label>
                <input class="form-control" type="text" name="location" id="camplocation" placeholder="Yosemite National Park, CA"></input>
            </div>
            <div class="form-group">
                <button class="btn btn-lg btn-primary btn-block">Submit!</button>
            </div>
        </form>
        
        <a class="buggy-link" href="/campgrounds">Go Back</a>
    </div>
</div>


<% include ../partials/footer %>