<% include ../partials/header %>


<div class="row">
    <h1 style="text-align: center;">Edit Comment</h1>
    
    <div style="width: 30%; margin: 25px auto; ">
        <form class="buggy-form" action="/campgrounds/<%= campground_id %>/comments/<%= comment._id %>?_method=PUT" method="POST"> <%/* METHOD SHOULD BE PUT, BUT NOT YET SUPPORTED BY HTML5 */%>
            <div class="form-group">
                <input class="form-control" type="text" name="comment[text]" value="<%= comment.text %>"></input>
            </div>
            <div class="form-group">
                <button class="buggy-button btn btn-lg btn-primary btn-block">Submit!</button>
            </div>
        </form>
        
        <a class="buggy-link" href="/campgrounds/<%= campground_id %>">Go Back</a>
    </div>
</div>


<% include ../partials/footer %>