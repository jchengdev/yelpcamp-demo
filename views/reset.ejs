<% include ./partials/header %>


<div class="row">
    <h1 style="text-align: center">Password Reset</h1>
    <div style="width: 30%; margin: 25px auto;">
        <form action="/reset/<%= token %>" method="POST">
            <div class="form-group">
                <label for="newpwrd">New Password</label>
                <input class="form-control" type="password" name="password" id="newpwrd" placeholder="New password" required></input>
            </div>
            <div class="form-group">
                <label for="confirmpwrd">Confirm Password</label>
                <input class="form-control" type="password" name="confirm" id="confirmpwrd" placeholder="Confirm password" required></input>
            </div>
            <div class="form-group">
                <button class="btn btn-lg btn-primary btn-block">Update Password</button>
            </div>
        </form>
        <a href="/campgrounds">Go Back</a>
    </div>
</div>


<% include ./partials/footer %>